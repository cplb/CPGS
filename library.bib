author = {Gair, Jonathan R. and Flanagan, Eanna E. and Drasco, Steve and Hinderer, Tanja and Babak, Stanislav},
keywords = {Galaxy Astrophysics,General Relativity and Quantum Cosmology,High Energy Astrophysical Phenomena},
