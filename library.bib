issn = {0031-899X},
journal = {Physical Review},
month = oct,
number = {5},
pages = {1559--1571},
publisher = {American Physical Society},
shorttitle = {Phys. Rev.},
title = {{Global Structure of the Kerr Family of Gravitational Fields}},
url = {http://link.aps.org/doi/10.1103/PhysRev.174.1559},
volume = {174},
year = {1968}
}
