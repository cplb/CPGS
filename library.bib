publisher = {American Physical Society},
shorttitle = {Phys. Rev. D},
title = {{Zoom and whirl: Eccentric equatorial orbits around spinning black holes and their evolution under gravitational radiation reaction}},
url = {http://link.aps.org/doi/10.1103/PhysRevD.66.044002},
volume = {66},
year = {2002}
}
