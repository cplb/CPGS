file = {:C\:/Users/cplb2/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Barack, Cutler - 2004 - LISA capture sources Approximate waveforms, signal-to-noise ratios, and parameter estimation accuracy.pdf:pdf},
